datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        String   @id @default(uuid())
  name      String
  sku       String?  @unique
  priceKwd  Decimal  @map("price_kwd")
  currency  String   @default("KWD")
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model PalmDevice {
  id         String    @id @default(uuid())
  name       String
  apiToken   String    @unique
  lastSeenAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  orders     Order[]
}

enum OrderStatus {
  pending
  awaiting_palm
  paid
  failed
  cancelled
}

model Order {
  id           String      @id @default(uuid())
  productId    String
  palmDeviceId String
  amountKwd    Decimal     @map("amount_kwd")
  currency     String
  status       OrderStatus
  customerRef  String?     @map("customer_reference")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  product    Product    @relation(fields: [productId], references: [id])
  palmDevice PalmDevice @relation(fields: [palmDeviceId], references: [id])
  payments   Payment[]
}

enum PaymentStatus {
  pending
  succeeded
  failed
}

model Payment {
  id          String        @id @default(uuid())
  orderId     String
  status      PaymentStatus
  palmUserId  String?
  gatewayTxId String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  order Order @relation(fields: [orderId], references: [id])
}
